{
  "appId": "com.firent.app",
  "productName": "Firent",
  
  
  "files": [
    "out/**/*",
    "src/electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "prisma/database.sqlite",
      "to": "database.sqlite"
    },
    {
      "from": "node_modules/sqlite3",
      "to": "node_modules/sqlite3"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/icon.png",
    "category": "Utility"
  }
}