{
  "appId": "firent.Desktop",
  "productName": "Firent",


  "extraMetadata": {
    "main": "src/electron/main.js"
  },
  
  "files": [   

    "out/**/*",
    "node_modules/**/*",
    "src/electron/**/*",
    ".nest/**/*",
    "package.json"
  ],
  "deb": {
    "artifactName": "${version}/${name}_${version}-1_${arch}.${ext}",
    "synopsis": "Firent Desktop App",
    "depends": [
      "libnotify4",
      "libxtst6",
      "libnss3"
    ],
    "priority": "optional"
  },
 


  "extraResources": [
    {
      "from": "prisma/database.sqlite",
      "to": "prisma/database.sqlite"
    }
   
  ],
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico",
     "artifactName": "${productName}_Setup_${version}.${ext}"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon.icns"
  },
  "linux": {
    "target": [
      "dir",
      "appimage",
      "zip"
    ],
    "icon": "public/icon.png",
    "category": "Utility",
    "desktop": {
    "Name": "Firent",
    "Comment": "Firent Desktop App",
    "executableName": "Firent",
    "Terminal": false
  }
  
    
  }
}